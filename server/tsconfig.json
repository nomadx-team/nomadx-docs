{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"baseUrl": "./",
		"declaration": false,
		"experimentalDecorators": true,
		"lib": [
			"es2015"
		],
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "build",
		"target": "es2017",
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": [
		"**/*.ts"
	]
}
